<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div calss="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter your name"
                    name="contactName" 
                    value="<%= contact.contactName %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter your contact number"
                    name="contactNumber" 
                    value="<%= contact.contactNumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for=emailTextField">E-mail</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter your email"
                    name="email" 
                    value="<%= contact.email %>" 
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/business-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>